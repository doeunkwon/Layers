{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "./",
		"baseUrl": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "typeRoots": ["./node_modules/@types", "./types"],
    "jsx": "react-native",
    "paths": {
      "@/types/*": ["./types/*"],
      "@/components/*": ["./components/*"]
    }
	},
  "include": ["**/*.ts", "**/*.tsx", ".eslintrc.cjs", "App.tsx", "babel.config.js"],
  "exclude": ["node_modules", "metro.config.js", "jest.config.js"]
}
